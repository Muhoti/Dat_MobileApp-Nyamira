<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".UpdateProduce"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:ignore="MissingDefaultResource">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/dullblue"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="64dp"
        app:layout_constraintTop_toTopOf="parent"
        android:gravity="center_vertical"
        android:paddingStart="24dp"
        android:paddingEnd="24dp"
        android:orientation="horizontal"
        android:background="@color/dullblue" >

        <TextView
            android:id="@+id/appbar_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Update Value Chain"
            android:padding="10dp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/back"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_baseline_home_24" />

    </LinearLayout>
    </androidx.appcompat.widget.Toolbar>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <ScrollView
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="24dp"
                    android:layout_marginEnd="24dp"
                    android:text="Update Produce"
                    android:textColor="@color/dullblue"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="20dp"
                    android:layout_marginTop="20dp"
                    />

                <!--    Text input start-->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="24dp"
                    android:text="All fields marked with * are required"
                    android:textColor="@color/dullblue"
                    android:textSize="10dp" />

                <TextView
                    android:id="@+id/error"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="24dp"
                    android:layout_marginEnd="24dp"
                    android:textSize="12sp"
                    android:text=""
                    android:textColor="@color/red"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="24dp"
                    android:layout_marginEnd="24dp"
                    android:text="Value Chain"
                    android:textColor="@color/black"
                    android:textSize="12sp"
                    />

                <TextView
                    android:id="@+id/valueChain"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="24dp"
                    android:layout_marginEnd="24dp"
                    android:inputType="text"
                    android:textColor="@color/dark_green"
                    android:textSize="12sp"
                    android:background="@drawable/input_blue_border"
                    android:padding="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="32dp"
                    />
                <!--    Text input end-->

                <!--    Text input start-->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="24dp"
                    android:layout_marginEnd="24dp"
                    android:text="Produce"
                    android:textColor="@color/black"
                    android:textSize="12sp"
                    />

                <EditText
                    android:id="@+id/produce"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="24dp"
                    android:layout_marginEnd="24dp"
                    android:inputType="numberDecimal"
                    android:hint="Amount Harvested"
                    android:textColorHint="@color/dullblue"
                    android:textColor="@color/dullblue"
                    android:textSize="12sp"
                    android:background="@drawable/input_blue_border"
                    android:padding="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="32dp"
                    />
                <!--    Text input end-->

                <!--    Text input start-->
                <TextView
                    android:id="@+id/date_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="24dp"
                    android:layout_marginEnd="24dp"
                    android:text="Harvest Date *"
                    android:textColor="@color/black"
                    android:textSize="12sp"
                    />

                    <CalendarView
                        android:id="@+id/harvestDate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:spinnerMode="dropdown"
                        android:layout_marginTop="10dp"
                        android:layout_marginStart="24dp"
                        android:layout_marginEnd="24dp"
                        android:background="@color/dullblue"
                        android:layout_marginBottom="10dp"
                        />
                <!--    Text input end-->

                <!--    Text input start-->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="24dp"
                    android:layout_marginEnd="24dp"
                    android:text="Farming Period"
                    android:textColor="@color/black"
                    android:textSize="12sp"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="24dp"
                    android:layout_marginEnd="24dp"
                    android:background="@drawable/input_blue_border"
                    android:layout_marginBottom="32dp"
                    android:layout_marginTop="10dp"
                    >

                    <Spinner
                        android:id="@+id/farmingPeriod"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:entries="@array/farmingPeriod"
                        android:spinnerMode="dropdown"
                        android:textColor="@color/dullblue"
                        android:backgroundTint="@color/dullblue"
                        android:padding="2dp"
                        />

                </LinearLayout>
                <!--    Text input end-->


                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/submit"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/dark_blue_button"
                    android:paddingStart="30dp"
                    android:paddingRight="30dp"
                    android:text="Update"
                    android:textSize="14sp"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:layout_gravity="center"
                    android:layout_marginBottom="24dp"
                    />

            </LinearLayout>

        </ScrollView>
        <ProgressBar
            android:id="@+id/progress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:visibility="gone"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>