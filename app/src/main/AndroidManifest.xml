<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ke.co.osl.nyamirafarmermappingapp">

    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.FarmerMappingApp">

        <activity
            android:name="ke.co.osl.nyamirafarmermappingapp.MainActivity"
            android:exported="false"
            android:label="@string/title_activity_main"
            android:theme="@style/Theme.FarmerMappingApp.NoActionBar" />

        <activity android:name="ke.co.osl.nyamirafarmermappingapp.LandingPage">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="ke.co.osl.nyamirafarmermappingapp.AddValueChain" />
        <activity android:name="ke.co.osl.nyamirafarmermappingapp.FarmerAddress" />
        <activity android:name="ke.co.osl.nyamirafarmermappingapp.FarmerAssociations" />
        <activity android:name="ke.co.osl.nyamirafarmermappingapp.FarmerDetails" />
        <activity android:name="ke.co.osl.nyamirafarmermappingapp.FarmerResources" />
        <activity android:name="ke.co.osl.nyamirafarmermappingapp.LoginPage" />
        <activity android:name="ke.co.osl.nyamirafarmermappingapp.UpdateProduce" />
        <activity android:name="ke.co.osl.nyamirafarmermappingapp.ValueChains" />
    </application>

</manifest>